<ContentPage
    x:Class="MauiAppHotel.Views.ReservasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Reservas">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Reservar um Quarto" FontSize="26" HorizontalOptions="Center"/>
        <Entry Placeholder="Nome completo" />
        <Entry Placeholder="Número de hóspedes" Keyboard="Numeric"/>
        <DatePicker />
        <Button Text="Confirmar Reserva" Clicked="OnConfirmarReserva"/>
        <Label x:Name="lblConfirmacao" TextColor="Green" FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>
