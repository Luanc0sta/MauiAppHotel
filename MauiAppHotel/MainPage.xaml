<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.MainPage"
             BackgroundColor="White">

	<ScrollView>
		<VerticalStackLayout Padding="30" Spacing="25">

			<Label Text="Bem-vindo ao Hotel MAUI"
                   FontSize="28"
                   TextColor="DodgerBlue"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

			<Button Text="Ver Serviços"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    Clicked="OnServicosClicked"/>

			<Button Text="Fazer Reserva"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    Clicked="OnReservasClicked"/>

			<Button Text="Sobre o App"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    Clicked="OnSobreClicked"/>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>